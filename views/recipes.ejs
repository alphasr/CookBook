<%include layouts/header.html%>
<!-- ============================================================== -->
<!-- Page wrapper  -->
<!-- ============================================================== -->
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="row page-titles">
            <div class="col-md-5 align-self-center">
                <h3 class="text-themecolor">Recipe Management</h3>
            </div>
            <div class="col-md-7 align-self-center">
              <button onClick="addRecipe()" class="btn waves-effect waves-light btn-success pull-right hidden-sm-down">Add Recipe</button>
            </div>

        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <!-- column -->
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Recipes</h3>
                        <h6 class="card-subtitle">Available <code>Recipes</code> in <code>Database</code>.</h6>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                  <% if(recipeArr.length){
                                    for(var i = 0; i < recipeArr.length; i++) { %>
                                      <tr>
                                          <td><%=recipe.recipe_id%></td>
                                          <td><%=recipe.name%></td>
                                          <td><%=recipe.description%></td>
                                          <td>
                                              <a class="btn mdi waves-effect waves-light btn-warning mdi-tooltip-edit" href="../recipes/edit/<%=data[i].RecipeID%>"></a>
                                              <a class="btn waves-effect waves-light btn-danger mdi mdi-delete" href="../recipes/delete/<%=data[i].RecipeID%>"></a>
                                          </td>
                                      </tr>
                                    <% }
                                  } else{ %>
                                   <tr>
                                      <td colspan="3">No Recipes</td>
                                   </tr>
                                   <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
<%include layouts/footer.html%>
