<%include layouts/header.html%>
<!-- ============================================================== -->
<!-- Page wrapper  -->
<!-- ============================================================== -->
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="row page-titles">
            <div class="col-md-5 align-self-center">
                <h3 class="text-themecolor">Edit Recipe</h3>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <!-- column -->
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                      <form class="form-horizontal form-material" action="/api/updateRecipe" method="post">
                          <div class="form-group">
                              <label class="col-md-12" for="name">Name</label>
                              <div class="col-md-12">
                                  <input type="text" id="name" name="name" value="<%=data[0].Name%>" class="form-control form-control-line" required>
                              </div>
                              <label class="col-md-12" for="description">Description</label>
                              <div class="col-md-12">
                                  <input type="text" id="description" name="description" value="<%=data[0].Description%>" class="form-control form-control-line">
                              </div>
                          </div>
                          <div class="form-group">
                              <div class="col-sm-12">
                                <input type="submit" name="submit" value="Update" class="btn btn-success">
                                <input type="button" name="cancel" value="Cancel" class="btn btn-danger" onClick="cancelRecipe()">
                              </div>
                          </div>
                      </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
<%include layouts/footer.html%>
