<%include layouts/header.html%>
<!-- ============================================================== -->
<!-- Page wrapper  -->
<!-- ============================================================== -->
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="row page-titles">
            <div class="col-md-5 align-self-center">
                <h3 class="text-themecolor">Users Management</h3>
            </div>
            <div class="col-md-7 align-self-center">
              <button onClick="addUser()" class="btn waves-effect waves-light btn-success pull-right hidden-sm-down">Add User</button>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                      <h3 class="card-title">Users</h3>
                      <h6 class="card-subtitle">All <code>Users</code> in <code>Database</code>.</h6>
                      <div class="table-responsive">
                          <table class="table">
                              <thead>
                                  <tr>
                                      <th>#</th>
                                      <th>Firstname</th>
                                      <th>Lastname</th>
                                      <th>Username</th>
                                      <th>Action</th>
                                  </tr>
                              </thead>
                              <tbody>
                                <% if(data.length){
                                  for(var i = 0; i < data.length; i++) { %>
                                    <tr>
                                        <td><%=data[i].UserID%></td>
                                        <td><%=data[i].FirstName%></td>
                                        <td><%=data[i].LastName%></td>
                                        <td><%=data[i].Login%></td>
                                        <td>
                                            <a class="btn mdi waves-effect waves-light btn-warning mdi-tooltip-edit" href="../users/edit/<%=data[i].UserID%>"></a>
                                            <a class="btn waves-effect waves-light btn-danger mdi mdi-delete" href="../users/delete/<%=data[i].UserID%>"></a>
                                        </td>
                                    </tr>
                                  <% }
                                } else{ %>
                                 <tr>
                                    <td colspan="3">No Users</td>
                                 </tr>
                                 <% } %>
                              </tbody>
                          </table>
                      </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
<%include layouts/footer.html%>
